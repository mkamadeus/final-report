\newcommand{\appendixchapter}[1]{%
  \refstepcounter{appendix}%
  \chapter{#1}%
  \addcontentsline{loa}{appendix}{\protect\numberline{\theappendix}#1}%
  \par
}

\newcommand{\appendixsection}[1]{%
  \refstepcounter{subappendix}%
  \section*{\thesubappendix\space #1}%
  \addcontentsline{loa}{subappendix}{\protect\numberline{\thesubappendix}#1}%
}

\newcommand{\appendixsubsection}[1]{%
  \refstepcounter{subsubappendix}%
  \subsection*{\thesubsubappendix\space #1}%
  \addcontentsline{loa}{subsubappendix}{\protect\numberline{\thesubsubappendix}#1}%
}

\newcommand{\appendixsubsubsection}[1]{%
  \refstepcounter{subsubsubappendix}%
  \subsubsection*{\thesubsubsubappendix\space #1}%
  \addcontentsline{loa}{subsubsubappendix}{\protect\numberline{\thesubsubsubappendix}#1}%
}
